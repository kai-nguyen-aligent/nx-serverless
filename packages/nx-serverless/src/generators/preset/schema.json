{
  "$schema": "https://json-schema.org/schema",
  "$id": "Preset",
  "title": "Nx Generator for bootstrapping Serverless Framework Workspace",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Workspace name"
    },
    "presetVersion": {
      "type": "string",
      "description": "Preset version"
    },
    "nodeVersionMajor": {
      "type": "number",
      "description": "Target Node.js version (major)"
    },
    "nodeVersionMinor": {
      "type": "number",
      "description": "Target Node.js version (minor)"
    },
    "packageManager": {
      "type": "string",
      "description": "Target package manager"
    }
  },
  "required": ["name", "presetVersion", "nodeVersionMajor", "nodeVersionMinor", "packageManager"]
}
